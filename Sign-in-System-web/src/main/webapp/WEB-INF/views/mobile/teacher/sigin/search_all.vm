<!doctype html>
<html>
<head>
    <title>学生签到系统</title>
    <link rel="stylesheet" href="/resources/css/mobile/student/home/style.css">
    <link rel="stylesheet" href="/resources/css/mobile/student/home/style1.css">
    <link rel="stylesheet" href="/resources/css/mobile/student/home/home.css">
    <link href="http://maxcdn.bootstrapcdn.com/font-awesome/4.2.0/css/font-awesome.min.css" rel="stylesheet">
    <link rel="stylesheet" type="text/css" href="/resources/css/bootstrap.css"/>
    <link rel="stylesheet" type="text/css" href="/resources/css/mobile/mobile.css"/>
</head>
<body>
<a href="#cd-nav" class="cd-nav-trigger">
    <span></span>
</a>
<!-- .cd-nav-trigger -->
<main>
    <section class="cd-section index cd-selected">
        <div class="cd-content">
            <form action="searchby_week.html" method="get" id="info" class="form-horizontal" role="form">
                <div class="form-group">
                    <label class="col-sm-2 control-label"><span class="need">*</span>课程：</label>
                    <div class="col-sm-3">
                        <select class="form-control" name="courseId" id="courseId">
                            #foreach($course in $courseList)
                                <option value="${course.courseId}">${course.courseName}</option>
                            #end
                        </select>
                    </div>
                    <div class="Validform_checktip"></div>
                </div>

                <div class="form-group">
                    <label class="col-sm-2 control-label"><span class="need">*</span>周：</label>
                    <div class="col-sm-3">
                        <select class="form-control" name="week" id="week">
                            #foreach($ele in [1..20])
                                <option value="${ele}">第${ele}周</option>
                            #end
                        </select>
                    </div>
                    <div class="Validform_checktip"></div>
                </div>

                <div class="form-group">
                    <div class="col-sm-offset-2 col-sm-10">
                        <button type="submit" class="btn btn-info">提交</button>
                    </div>
                </div>
            </form>
        </div>
    </section>
    <!-- .cd-section --> </main>
<nav class="cd-nav-container" id="cd-nav">
    #parse("teacher/backbar.vm")
</nav>
<div class="cd-overlay">
</div>
</body>
<script src="/resources/js/mobile/student/home/jquery-2.1.1.js"></script>
<script src="/resources/js/mobile/student/home/main.js"></script>
<script src="/resources/js/mobile/student/home/index.js"></script>
<script src="/resources/js/mobile/student/home/modernizr.js"></script>
</html>