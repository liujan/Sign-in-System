<!DOCTYPE html>
<html >
<head >
	<title>学生签到系统</title>
	<meta charset="UTF-8"/>
	<link rel="stylesheet" type="text/css" href="../css/bootstrap.css"  />
	<link rel="stylesheet" type="text/css" href="../css/style.css"/>
	<link rel="stylesheet" type="text/css" href="../css/validform_style.css"/>
	
	<script type="text/javascript" src="../js/jquery.min.js"></script>
	<script type="text/javascript" src="../js/bootstrap-dropdown.js"></script>
	<script type="text/javascript" src="../js/Validform_v5.3.2.js"></script>

</head>
<body >
	#parse("teacher/toolbar.vm")
	<div class="add1">
    	<form action="set_course.html" method="get" id="info" class="form-horizontal" role="form" >
    		<div class="form-group">
    		      	<label class="col-sm-2 control-label"><span class="need">*</span>当前课程：</label>
    		      	<div class="col-sm-3">
    		      		<select class="form-control" name="courseId" id="courseId">	
    							#foreach($course in $courseList)
    								<option value="${course.courseId}">${course.courseName}</option>
    							#end
    		         	</select>
    		         </div>
    		         <div class="Validform_checktip"></div>
    		</div>
    		
    		<div class="form-group">
    		      	<label class="col-sm-2 control-label"><span class="need">*</span>当前周：</label>
    		      	<div class="col-sm-3">
    		      		<select class="form-control" name="week" id="week">	
    							#foreach($ele in [1..20])
    								<option value="${ele}">第${ele}周</option>
    							#end
    		         	</select>
    		         </div>
    		         <div class="Validform_checktip"></div>
    		</div>
			
			<div class="form-group">
			      	<div class="col-sm-offset-2 col-sm-10">
			         	<button type="submit" class="btn btn-info">提交</button>
			     	</div>
			</div>
        </form>
    </div>
</body>
<script type="text/javascript">
	$(function(){
	var info = $("#info").Validform({
		tiptype:1,
		label:".label",
		showAllError:true,
		ajaxPost:true,
		callback:function(data) {
			var msg = decodeURI(data.message);
			var status = data.status;
			alert(msg);
		}
	});
	});
</script>
</html>