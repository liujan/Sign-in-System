<!DOCTYPE html>
<html>
<head>
    <title>学生签到系统</title>
    <meta charset="UTF-8"/>
    <link rel="stylesheet" type="text/css" href="/resources/css/demo.css"/>
    <link ref="stylesheet" type="text/css" href="/resources/css/style.css"/>
    <link rel="stylesheet" type="text/css" href="/resources/css/bootstrap.css"/>
    <link rel="stylesheet" type="text/css" href="/resources/css/validform_style.css"/>
    <script type="text/javascript" src="/resources/js/jquery.min.js"></script>
    <script type="text/javascript" src="/resources/js/Validform_v5.3.2.js"></script>
    <script type="text/javascript" src="/resources/js/teacher_register.js"></script>
</head>
<body>
<div class="container">
    <div class="add">
        <form action="register" method="post" class="form-horizontal" id="lg-form" role="form">
            <div class="form-group">
                <label for="name" class="col-sm-3 control-label"><span class="need">*</span>用户名:</label>
                <div class="col-sm-3">
                    <input type="text" class="form-control" name="userName" id="userName"
                           placeholder="请输入用户名">
                </div>
                <div>
                    <div class="Validform_checktip"></div>
                </div>
            </div>

            <div class="form-group">
                <label for="teacher_name" class="col-sm-3 control-label"><span class="need">*</span>姓名:</label>
                <div class="col-sm-3">
                    <input type="text" class="form-control" name="teacherName" id="teacherName"
                           placeholder="请输入真实姓名">
                </div>
                <div>
                    <div class="Validform_checktip"></div>
                </div>
            </div>

            <div class="form-group">
                <label for="email" class="col-sm-3 control-label"><span class="need">*</span>邮箱:</label>
                <div class="col-sm-3">
                    <input type="text" class="form-control" name="email" id="email"
                           placeholder="请输入邮箱">
                </div>
                <div>
                    <div class="Validform_checktip"></div>
                </div>
            </div>

            <div class="form-group">
                <label for="pwd" class="col-sm-3 control-label"><span class="need">*</span>密码:</label>
                <div class="col-sm-3">
                    <input type="password" class="form-control" name="userPwd" id="userPwd"
                           placeholder="请输入密码">
                </div>
                <div>
                    <div class="Validform_checktip"></div>
                </div>
            </div>

            <div class="form-group">
                <label for="repw" class="col-sm-3 control-label"><span class="need">*</span>确认密码:</label>
                <div class="col-sm-3">
                    <input type="password" class="form-control" name="repw" id="repw"
                           placeholder="请再次输入密码">
                </div>
                <div>
                    <div class="Validform_checktip"></div>
                </div>
            </div>

            <div class="form-group">
                <div class="col-sm-offset-3 col-sm-10">
                    <button type="submit" class="btn btn-info">提交</button>
                    <a href="login"
                    <button class="btn btn-default">返回</button>
                    </a>
                </div>
            </div>
        </form>
    </div>
</div>
</body>
</html>